@model News
@{
    ViewData["Title"] = Model.Name;
}

<section class="py-5 bg-white">
    <div class="container">
        
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="/News" class="text-decoration-none text-muted">Haberler</a></li>
                <li class="breadcrumb-item active text-dark" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                
                <div class="text-center mb-4">
                    <h1 class="fw-bold display-5 mb-3">@Model.Name</h1>
                    
                    <div class="d-flex justify-content-center align-items-center text-muted small">
                        <div class="d-flex align-items-center me-3">
                            <i class="bi bi-calendar-event me-2"></i>
                            <span>@Model.CreateDate.ToString("dd MMMM yyyy")</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-circle me-2"></i>
                            <span>Admin</span> </div>
                    </div>
                </div>

                <div class="mb-5">
                    <img src="/img/news/@Model.Image" 
                         alt="@Model.Name" 
                         class="img-fluid rounded-3 shadow w-100"
                         style="max-height: 500px; object-fit: cover;">
                </div>

                <div class="article-content fs-5 text-secondary" style="line-height: 1.8;">
                    @Model.Description
                </div>

                <hr class="my-5 text-muted">

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-dark">
                        <i class="bi bi-arrow-left me-2"></i> Haberlere DÃ¶n
                    </a>
                    
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-light rounded-circle"><i class="bi bi-twitter"></i></button>
                        <button class="btn btn-sm btn-light rounded-circle"><i class="bi bi-facebook"></i></button>
                        <button class="btn btn-sm btn-light rounded-circle"><i class="bi bi-whatsapp"></i></button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>