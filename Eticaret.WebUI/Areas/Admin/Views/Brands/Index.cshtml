@model IEnumerable<Eticaret.Core.Entities.Brand>

@{
    ViewData["Title"] = "Markalar";
}

<p>
    <a asp-action="Create"class="btn btn-outline-primary">Yeni Marka Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                
                <img src="/img/@Html.DisplayFor(modelItem => item.Logo)" alt="" height="30"/">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.Id">Düzenle</a>
                <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.Id">Detaylar</a>
                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
