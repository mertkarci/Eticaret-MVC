@{
    ViewData["Title"] = "_Header";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<header class="position-relative">

    <nav class="navbar navbar-expand-lg navbar-dark navbar-color shadow-sm">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">SAFU</a>

            <div class="d-lg-none ms-auto d-flex align-items-center">

                <button class="btn btn-link text-white me-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mobileSearchBox" aria-expanded="false" aria-controls="mobileSearchBox">
                    <i class="bi bi-search fs-4"></i>
                </button>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbarsExample04">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    @await Component.InvokeAsync("Categories")
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="ContactUs">İletişim</a>
                    </li>
                </ul>

                <form action="/Products" class="d-none d-lg-flex me-3" role="search">
                    <input name="q" class="form-control me-2" type="search" placeholder="Sitede Ara..."
                        aria-label="Search">
                </form>
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <a class="dropdown-toggle nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Hesabım
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">

                            <li><a class="dropdown-item" asp-controller="Accounts" asp-action="Details">Kullanıcı
                                    Bilgilerim</a></li>
                            <li><a class="dropdown-item" asp-controller="Accounts" asp-action="Orders">Siparişlerim</a></li>
                            <li><a class="dropdown-item" asp-controller="Accounts"
                                    asp-action="Reviews">Değerlendirmelerim</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-danger" asp-controller="Accounts" asp-action="SignOut">Çıkış
                                    Yap</a></li>

                        </ul>
                    </div>
                }
                else
                {
                    <div class="d-flex mt-3 mt-lg-0">
                        <a class="btn btn-outline-light me-2" asp-controller="Accounts" asp-action="SignIn">Giriş Yap</a>
                        <a class="btn btn-light text-primary" asp-controller="Accounts" asp-action="SignUp">Kayıt Ol</a>
                    </div>
                }

            </div>
        </div>
    </nav>

    <div class="collapse bg-light p-3 border-bottom shadow-sm w-100 position-absolute" id="mobileSearchBox"
        style="z-index: 1050; top: 100%; left: 0;">
        <div class="container">
            <form action="/Products" class="d-flex" role="search">
                <input name="q" class="form-control me-2" type="search" placeholder="Ne aramıştınız?"
                    aria-label="Search">
                <button class="btn btn-primary" type="submit">Ara</button>
            </form>
        </div>
    </div>

</header>