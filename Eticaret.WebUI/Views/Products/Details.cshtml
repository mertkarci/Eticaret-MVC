@model ProductDetailViewModel
@{
    ViewData["Title"] = Model.Product.Name;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="/Products" class="text-decoration-none text-muted">Ürünler</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detay</li>
            </ol>
        </nav>

        <div class="row gx-5 align-items-start">
            
            <div class="col-md-6 mb-5 mb-md-0">
                <div class="position-relative">
                    <span class="badge bg-danger position-absolute top-0 start-0 m-3 px-3 py-2 rounded-pill shadow-sm">
                        %20 İndirim
                    </span>
                    <img class="product-detail-img mb-3" 
                         src="/img/products/@Model.Product.Image" 
                         alt="@Model.Product.Name">
                </div>
            </div>

            <div class="col-md-6">
                <div class="small text-muted mb-2">Ürün Kodu: <strong>@Model.Product.ProductCode</strong></div>
                
                <h1 class="fw-bold fs-2 mb-3 text-dark">@Model.Product.Name</h1>

                <div class="mb-4 d-flex align-items-center">
                    <span class="text-muted text-decoration-line-through me-3 fs-5">@(Model.Product.Price * 1.2m)₺</span>
                    <span class="display-6 fw-bold text-primary">@Model.Product.Price.ToString("c")</span>
                </div>

                <p class="lead text-secondary mb-5" style="font-size: 1rem; line-height: 1.6;">
                    @Model.Product.Description
                </p>

                <div class="card bg-light border-0 rounded-3 p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        
                        <div class="input-group" style="width: 140px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="decreaseQty()">-</button>
                            <input type="number" class="form-control quantity-input bg-white" id="inputQuantity" value="1" min="1">
                            <button class="btn btn-outline-secondary" type="button" onclick="increaseQty()">+</button>
                        </div>

                        <button class="btn btn-primary btn-lg flex-fill ms-3 shadow-sm" type="button">
                            <i class="bi-cart-plus-fill me-2"></i> Sepete Ekle
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bolder m-0">Bunları da Beğenebilirsiniz</h2>
            <a href="/Products" class="text-decoration-none fw-bold">Tümünü Gör &rarr;</a>
        </div>
        
        <hr class="mb-5 text-muted">

        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
            {
                @foreach (var item in Model.RelatedProducts)
                {
                    <partial name="_ProductView" model="item"></partial>
                }
            }
            else
            {
                <div class="alert alert-warning w-100 text-center">Benzer ürün bulunamadı.</div>
            }
        </div>
    </div>
</section>

<script>
    function increaseQty() {
        var input = document.getElementById('inputQuantity');
        input.value = parseInt(input.value) + 1;
    }
    function decreaseQty() {
        var input = document.getElementById('inputQuantity');
        if (parseInt(input.value) > 1) {
            input.value = parseInt(input.value) - 1;
        }
    }
</script>