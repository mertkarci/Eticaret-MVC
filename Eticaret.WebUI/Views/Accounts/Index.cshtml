@model UserEditViewModel
@{
    ViewData["Title"] = "Hesabım";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a asp-action="Index" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person"></i> Üyelik Bilgileri
                </a>
                <a href="/Accounts/SignOut" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                </a>
            </div>
        </div>

        <div class="col-md-9">
        @if (TempData["Message"] != null)
    {
        /* HTML kodları içerdiği için Html.Raw kullanıyoruz */
        @Html.Raw(TempData["Message"])
    }
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Üyelik Bilgilerini Güncelle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">

                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Ad</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Surname" class="form-label">Soyad</label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Adresi</label>
                            <input asp-for="Email" class="form-control" style="background-color: #e9ecef;" />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Bilgileri Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>