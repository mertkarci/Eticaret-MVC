@model ProductDetailViewModel
@{
    ViewData["Title"] = Model.Product.Name;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="/Products" class="text-decoration-none text-muted">Ürünler</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Product.Name</li>
            </ol>
        </nav>

        <div class="row gx-5 align-items-center">
            
            <div class="col-md-6 mb-5 mb-md-0">
                <div class="position-relative">
                    <span class="badge bg-danger position-absolute top-0 start-0 m-3 px-3 py-2 rounded-pill shadow-sm" style="z-index: 10;">
                        %20 İndirim
                    </span>
                    
                    <img class="card-img-top img-fluid w-100 rounded mb-5 mb-md-0 shadow-sm" 
                         src="/img/products/@Model.Product.Image" 
                         alt="@Model.Product.Name"
                         style="object-fit: contain; max-height: 600px;"> 
                         </div>
            </div>

            <div class="col-md-6">
                <div class="small text-muted mb-2">Ürün Kodu: <strong>@Model.Product.Id</strong></div> <h1 class="display-5 fw-bolder mb-3">@Model.Product.Name</h1>

                <div class="fs-5 mb-4">
                    <span class="text-decoration-line-through text-muted me-2">@(Model.Product.Price * 1.2m) ₺</span>
                    <span class="fw-bold text-primary">@Model.Product.Price.ToString("c")</span>
                </div>

                <p class="lead mb-5">
                    @Model.Product.Description
                </p>

                <div class="d-flex">
                    <div class="input-group me-3" style="max-width: 130px;">
                        <button class="btn btn-outline-secondary" type="button" onclick="decreaseQty()">-</button>
                        <input class="form-control text-center" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                        <button class="btn btn-outline-secondary" type="button" onclick="increaseQty()">+</button>
                    </div>
                    
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Sepete Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Bunları da Beğenebilirsiniz</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            
            @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
            {
                @foreach (var item in Model.RelatedProducts)
                {
                    <partial name="_ProductView" model="item" />
                }
            }
            else
            {
                <div class="alert alert-warning w-100 text-center">Bu kategoride başka benzer ürün bulunamadı.</div>
            }

        </div>
    </div>
</section>

<script>
    function increaseQty() {
        var input = document.getElementById('inputQuantity');
        var value = parseInt(input.value);
        input.value = value + 1;
    }

    function decreaseQty() {
        var input = document.getElementById('inputQuantity');
        var value = parseInt(input.value);
        if (value > 1) {
            input.value = value - 1;
        }
    }
</script>